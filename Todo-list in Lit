
/*******************************JavaScript*******************************/



import {LitElement, htmml} from 'lit';

export class ToDoList extends LitElement{
  static properties = {
      _listItems: {state: true},
      };
      
   constructor(){
      super();
      this._listItems = [
        {text: 'Start Lit tutorial', completed:true},
        {text: 'Make to-do list', coompleted: false},
        ];
   }
   
   render() {
      return html `
        <h2> To Do</h2>
        <ul>
          ${this._listItems.map((item) => html `<li>${item.text}</li>`)}
          </ul>
          <input id="newitem" aria-label="newitem>
          <button @click=${this.addToDo}>Add</button>`;}
  
  get input() {
    return this.renderRoot?.querySelector('#newitem')??null;
   }
  
  addToDo(){
    this._listItems =[...this._listItems, {text: this.input.value, completed:false}];
    this.input.value = '';
    }
  }
  
customElements.define('todo-list',ToDolist


/*******************************HTML*******************************/

<!DOCTYPE html>
<html>
  <head>
    <script type="module" src="todo-list.js"></script>
    <style>
    body{
      font-family: 'Open San', sans-serif;
      font-size: 1.5em;
      padding-left: 0.5em;
      }
     </style>
   </head>
    <body>
      <todo-list></todo-list>
   </body>
 </html>
      
      
          

